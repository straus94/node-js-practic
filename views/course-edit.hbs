<h1>Edit {{course.title}}</h1>
{{course._id}}

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="enter name"></span>
    </div>

    <div class="input-field">
        <input id="price" type="text" name="price" class="validate" required  value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>

    <div class="input-field">
        <input id="image" type="text" name="img" class="validate" required  value="{{course.img}}">
        <label for="image">URL img</label>
        <span class="helper-text" data-error="enter url image"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csurf}}">

    <input type="hidden" name="id" value="{{course._id}}">
    <button class="btn btn-primary">Edit </button>


</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">

    <button type="submit" class="btn red">Delete </button>
</form>

