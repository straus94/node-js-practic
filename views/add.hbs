<h1>Add new course</h1>


<form action="/add" method="post">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="enter name">Helper text</span>
    </div>

    <div class="input-field">
        <input id="price" type="text" name="price" class="validate" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter price">Helper text</span>
    </div>

    <div class="input-field">
        <input id="image" type="text" name="img" class="validate" required>
        <label for="image">URL img</label>
        <span class="helper-text" data-error="enter url image">Helper text</span>
    </div>

    <button class="btn btn-primary">Add +</button>
</form>
