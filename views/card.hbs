<h1>Basket</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Acctions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}" data-csurf="{{@root.csurf}}">Delete</button>
                    </td>
                </tr>
            {{/each}}

            </tbody>
        </table>

        <p><strong>Price: <span class="price">{{price}}</span></strong></p>

        <form method="post" action="/orders">
            <input type="hidden" name="_csrf" value="{{csurf}}">

            <button type="submit" class="btn">Make order</button>
        </form>
    {{else}}
        <p>Empty basket</p>
    {{/if}}
</div>

